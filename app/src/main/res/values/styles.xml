<resources>
    <!-- Base application theme. -->
    <style name="BaseAppTheme" parent="Theme.AppCompat.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowBackground">@color/colorWindowBackground</item>
        <item name="toolbarStyle">@style/AppToolBarTheme</item>
    </style>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="BaseAppTheme">
        <!-- Customize your theme here. -->
    </style>

    <style name="AppToolBarTheme" parent="Widget.AppCompat.Toolbar">
        <!-- Customize your theme here. -->

    </style>

    <style name="textStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">@dimen/dimen_padding</item>
        <item name="android:textColorHint">@color/textColorBlackHint</item>
        <item name="android:textColor">@color/textColorBlack</item>
    </style>

</resources>
