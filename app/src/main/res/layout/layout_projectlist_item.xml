<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:gravity="center"
              android:background="@drawable/sel_listitem_bg"
              android:orientation="horizontal">

    <TextView
        android:id="@+id/seqText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="@dimen/dimen_padding"
        android:text="1"
        android:textSize="@dimen/demen_textsize"/>

    <TextView
        android:id="@+id/projectCode"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:padding="@dimen/dimen_padding"
        android:singleLine="true"
        android:text="ASKDFLASDF"/>

    <TextView
        android:id="@+id/projectName"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:ellipsize="marquee"
        android:padding="@dimen/dimen_padding"
        android:singleLine="true"
        android:text="ASKDFLASDFasdfasdASDFASDFASDFASDF"/>
</LinearLayout>