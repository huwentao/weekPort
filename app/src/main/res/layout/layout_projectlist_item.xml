<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/sel_listitem_bg"
                android:orientation="horizontal">

    <TextView
        android:id="@+id/seqText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:padding="@dimen/dimen_padding_small"
        android:textSize="@dimen/demen_textsize"/>

    <TextView
        android:id="@+id/projectCode"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@+id/seqText"
        android:ellipsize="end"
        android:gravity="center"
        android:lines="2"
        android:maxLines="2"
        android:padding="@dimen/dimen_padding_small"
        android:singleLine="true"
        android:text="ASKDFLASDF"
        android:textSize="@dimen/demen_textsize_small"/>

    <TextView
        android:id="@+id/projectName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/projectCode"
        android:ellipsize="end"
        android:gravity="center"
        android:lines="2"
        android:maxLines="2"
        android:padding="@dimen/dimen_padding_small"
        android:text="asdfasdASDFASDFASDFASDFSDFASDF"
        android:textSize="@dimen/demen_textsize_small"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/projectName"
        android:background="@color/colorPrimaryLight"/>
</RelativeLayout>